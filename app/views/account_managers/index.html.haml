- model_class = AccountManager.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:screen_name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @account_managers.each do |account_manager|
      %tr
        %td= link_to account_manager.id, account_manager_path(account_manager)
        %td= account_manager.screen_name
        %td=l account_manager.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_account_manager_path(account_manager), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), account_manager_path(account_manager), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_account_manager_path, :class => 'btn btn-primary'
