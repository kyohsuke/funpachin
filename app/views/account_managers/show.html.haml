- model_class = @account_manager.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:screen_name) + ':'
  %br
  = @account_manager.screen_name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), account_managers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_account_manager_path(@account_manager), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), account_manager_path(@account_manager), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
