- model_class = NewsFeed.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @news_feeds.each do |news_feed|
      %tr
        %td= link_to news_feed.id, news_feed_path(news_feed)
        %td= news_feed.description
        %td=l news_feed.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_news_feed_path(news_feed), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), news_feed_path(news_feed), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_news_feed_path, :class => 'btn btn-primary'
