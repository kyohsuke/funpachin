- model_class = @news_feed.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @news_feed.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), news_feeds_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_news_feed_path(@news_feed), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), news_feed_path(@news_feed), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
